{
  "info": {
    "name": "Categories API - Example Requests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get all categories",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{API_KEY}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/categories",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "categories"
          ]
        }
      }
    },
    {
      "name": "Get category by id",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{API_KEY}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/categories/1",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "categories",
            "1"
          ]
        }
      }
    },
    {
      "name": "Create category",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "X-API-Key",
            "value": "{{API_KEY}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\\n  \\\"name\\\": \\\"New category\\\",\\n  \\\"slug\\\": \\\"new-category\\\"\\n}"
        }
      }
    }
  ]
}